{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.1.4",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "loglevel": "verbose"
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "forcePublish": true,
      "createRelease": "github",
      "message": "chore(release): %s"
    }
  },
  "packages": [
    "packages/*"
  ]
}
