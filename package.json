{
  "name": "splinters",
  "private": true,
  "description": "Shared build tools for TypeScript and frontend projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exile-watch/splinters.git"
  },
  "scripts": {
    "postinstall": "npx lefthook install",
    "ci:typecheck": "exit 0",
    "ci:lint": "nx run ci:lint",
    "lint": "nx run-many -t format lint",
    "lint:apply": "nx run lint:apply",
    "format": "nx run format",
    "typecheck": "nx run typecheck",
    "test": "nx run test",
    "build": "nx build"
  },
  "author": "Sebastian Krzyzanowski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/exile-watch/hideout/issues"
  },
  "homepage": "https://github.com/exile-watch/splinters#readme",
  "devDependencies": {
    "@exile-watch/biome-config": "*",
    "@exile-watch/lefthook-config": "*",
    "@nx/js": "^20.8.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@vitest/ui": "^3.0.8",
    "nx": "20.8.0",
    "turbo": "^2.4.4",
    "vite": "~6.2.2",
    "vitest": "^3.0.8"
  },
  "workspaces": ["packages/*"],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@changesets/cli": "^2.28.1"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  }
}
