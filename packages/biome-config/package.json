{
  "name": "@exile-watch/biome-config",
  "version": "1.1.3",
  "description": "Shared Biome.js configuration for exile.watch frontend projects",
  "main": "biome.json",
  "type": "module",
  "exports": {
    ".": "./biome.json"
  },
  "scripts": {
    "ci:lint": "npx @biomejs/biome ci .",
    "lint": "npm run format && npx @biomejs/biome check .",
