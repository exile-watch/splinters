    "format": "npx @biomejs/biome format --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exile-watch/splinters.git",
    "directory": "packages/biome-config"
  },
  "author": "Sebastian Krzyzanowski",
  "license": "ISC",
  "homepage": "https://github.com/exile-watch/splinters/pkgs/npm/biome-config",
  "dependencies": {
    "@biomejs/biome": "^1.9.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  }
}
