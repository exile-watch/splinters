{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",                          // Compile to ES5
    "module": "esnext",                       // Use ES modules
    "jsx": "react",                           // Transform JSX into React.createElement calls
    "outDir": "./src",                       // Output directory for compiled files
    "strict": true,                           // Enable all strict type-checking options
    "moduleResolution": "node",               // Module resolution strategy
    "esModuleInterop": true,                  // Enable default imports from modules with no default export
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "sourceMap": false
    // Other options here
  },
  "include": ["src/**/*"], // Compile all files in src (including .tsx files)
  "exclude": ["node_modules", "dist"] // Don't compile node_modules or dist
}